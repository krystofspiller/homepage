{
  "name": "homepage",
  "type": "module",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "tsx src/scripts/generate-blog-versions.ts && astro build",
    "test": "vitest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "oxlint --type-aware --fix",
    "lint:ci": "oxlint --type-aware",
    "scripts:check-links": "tsx src/scripts/check-links.ts",
    "clean": "rm -rf dist .astro .cache .wrangler playwright-report test-results src/data/blog-versions",
    "clean:all": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.13",
    "@floating-ui/dom": "^1.7.4",
    "@tailwindcss/vite": "^4.1.18",
    "alpinejs": "^3.15.2",
    "astro": "^5.16.5",
    "butteruptoasts": "^2.0.1",
    "canvas-confetti": "^1.9.4",
    "gsap": "^3.14.1",
    "nanostores": "^1.1.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@t3-oss/env-core": "^0.13.8",
    "@types/alpinejs": "^3.13.11",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "linkedom": "^0.18.12",
    "msw": "^2.12.4",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.6",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.15",
    "wrangler": "^4.54.0"
  }
}
