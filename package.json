{
  "name": "homepage",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "tsx src/scripts/generate-blog-versions.ts && astro build",
    "test": "vitest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "oxlint --fix",
    "lint:ci": "oxlint",
    "scripts:check-links": "tsx src/scripts/check-links.ts",
    "clean": "rm -rf dist .astro .cache .wrangler playwright-report test-results src/data/blog-versions",
    "clean:all": "pnpm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.7",
    "@tailwindcss/vite": "^4.1.14",
    "alpinejs": "^3.15.0",
    "astro": "^5.15.1",
    "butteruptoasts": "^2.0.1",
    "canvas-confetti": "^1.9.4",
    "gsap": "^3.13.0",
    "nanostores": "^1.0.1",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tippy.js": "^6.3.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@t3-oss/env-core": "^0.13.8",
    "@types/alpinejs": "^3.13.11",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.8.1",
    "dotenv": "^17.2.3",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "linkedom": "^0.18.12",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "vitest": "^4.0.1",
    "wrangler": "^4.45.0"
  }
}
