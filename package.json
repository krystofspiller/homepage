{
  "name": "homepage",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "pnpm run scripts:generate-blog-versions && astro dev",
    "build": "pnpm run scripts:generate-blog-versions && astro build",
    "test": "vitest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "scripts:check-links": "pnpm tsx src/scripts/check-links.ts",
    "scripts:generate-blog-versions": "pnpm tsx src/scripts/generate-blog-versions.ts",
    "clean": "rm -rf dist .astro .cache .wrangler playwright-report test-results src/data/blog-versions",
    "clean:all": "pnpm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.7",
    "@tailwindcss/vite": "^4.1.14",
    "alpinejs": "^3.15.0",
    "astro": "^5.14.1",
    "butteruptoasts": "^2.0.1",
    "canvas-confetti": "^1.9.3",
    "gsap": "^3.13.0",
    "nanostores": "^1.0.1",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tippy.js": "^6.3.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@t3-oss/env-core": "^0.13.8",
    "@types/alpinejs": "^3.13.11",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "linkedom": "^0.18.12",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  }
}
