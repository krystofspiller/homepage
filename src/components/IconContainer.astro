---
import TooltipInline from "./TooltipInline.astro"

const { name, tooltip } = Astro.props
---

<TooltipInline enabled={!!tooltip}>
  <div
    slot="trigger"
    class="flex w-fit flex-col items-center justify-center transition-all hover:[&_.img]:scale-120"
  >
    <div
      class="inline-flex flex-col items-center justify-center rounded-md border border-zinc-600 bg-zinc-800 p-3"
    >
      <div class="img transition">
        <slot />
      </div>
    </div>
    <span
      class="mt-1 text-center font-sans text-sm text-zinc-400"
      set:html={name}
    />
  </div>
  <span slot="content">{tooltip}</span>
</TooltipInline>
