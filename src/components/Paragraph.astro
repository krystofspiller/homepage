---
import { twMerge } from "tailwind-merge"

interface Props {
  className?: string
  ["data-as"]?: "p" | "div" | "span"
  ["x-data"]?: string
}

const { ["data-as"]: Element = "p", className, ...rest } = Astro.props as Props
---

<Element
  class={twMerge("mb-3 text-lg leading-8 text-zinc-400", className)}
  {...rest}><slot /></Element
>
