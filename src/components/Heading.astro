---
import Divider from "./Divider.astro"
import { twMerge } from "tailwind-merge"

interface Props {
  ["data-as"]: "h2" | "h3" | "h4" | "h5"
  [key: string]: unknown
}

const { "data-as": Element, ...rest } = Astro.props as Props
const classMap = {
  h2: "text-2xl",
  h3: "text-xl",
  h4: "text-lg",
  h5: "text-lg",
}
---

<Element
  class={twMerge(
    "mb-1 scroll-mt-15 font-semibold text-zinc-100",
    classMap[Element],
  )}
  {...rest}><slot />{Element === "h2" && <Divider />}</Element
>
