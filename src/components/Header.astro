---
import EasterEggs from "./EasterEggs.astro"
import { twMerge } from "tailwind-merge"

import Github from "@assets/icons/github.astro"
import Email from "@assets/icons/email.astro"
import Linkedin from "@assets/icons/linkedin.astro"
import profile from "@assets/images/profile.avif"

import Image from "@components/Image.astro"
import ContainerHover from "@components/ContainerHover.astro"
import TooltipInline from "@components/TooltipInline.astro"

import { HEADER_HEIGHT } from "@utils/constants"

const currentPath = Astro.url.pathname
---

<header
  class={twMerge(
    "fixed z-100 flex w-full items-center justify-center bg-neutral-950 p-2",
    HEADER_HEIGHT.tailwindClass,
  )}
>
  <nav class="flex w-full max-w-screen-sm items-center justify-center gap-2">
    <div class="flex items-center gap-1">
      {currentPath !== "/" && <ContainerHover href="/">Home</ContainerHover>}
    </div>
    <EasterEggs />
    <div class="flex items-center gap-3">
      <ContainerHover href="https://www.linkedin.com/in/krystof-spiller">
        <Linkedin />
      </ContainerHover>
      <ContainerHover href="mailto:krystof.spiller@gmail.com">
        <Email />
      </ContainerHover>
      <ContainerHover href="https://github.com/krystofspiller">
        <Github />
      </ContainerHover>
    </div>
    <TooltipInline class="ml-2 cursor-default">
      <Image
        slot="trigger"
        class="w-6 max-w-6 rounded-full"
        loading="eager"
        width={96}
        height={96}
        src={profile}
        alt="Krystof's profile"
      />
      <div slot="content">
        <div class="flex items-center justify-center">
          You found me&nbsp;<span class="text-white">üïµÔ∏è</span>
        </div><a
          href="https://www.youtube.com/watch?v=wyx6JDQCslE"
          target="_blank"
          ><Image
            class="mt-1 w-64 max-w-64 rounded-lg"
            loading="eager"
            src={profile}
            alt="Krystof's profile"
          /></a
        >
      </div>
    </TooltipInline>
  </nav>
</header>
