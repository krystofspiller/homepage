---
import { twMerge } from "tailwind-merge"
import Image from "@components/Image.astro"
import type { LocalImageProps } from "astro:assets"
import YearRange from "@components/YearRange.astro"
import type { YearRangeProps } from "@components/YearRange.astro"

type Props = YearRangeProps &
  LocalImageProps & {
    id: string
    alt: string
    imgHeight: string
    "data-toc"?: string
  }

const {
  id,
  "data-toc": dataToc,
  from,
  to,
  note,
  imgHeight,
  alt,
  ...imgProps
} = Astro.props as Props
---

<h3
  class="mb-4 flex scroll-mt-15 flex-col items-center justify-center gap-1"
  id={id}
  data-toc={dataToc}
>
  <Image class={twMerge("w-auto mb-0.5", imgHeight)} {...imgProps} alt={alt} />
  <YearRange from={from} to={to} note={note} />
</h3>
