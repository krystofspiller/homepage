---
import { twMerge } from "tailwind-merge"

interface Props {
  type?: "disc" | "decimal"
}

const { type = "disc" } = Astro.props as Props
const classMap = {
  decimal: "list-decimal",
  disc: "list-disc",
}
---

<ol
  class={twMerge(
    "my-3 ml-6 space-y-1 text-lg leading-8 text-zinc-400",
    classMap[type],
  )}
>
  <slot />
</ol>
