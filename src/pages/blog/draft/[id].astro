---
import BlogPostLayout from "@components/BlogPostLayout.astro"
import { postsIncludingDrafts } from "src/data/common"

const { post } = Astro.props

// oxlint-disable-next-line explicit-module-boundary-types explicit-function-return-type
export const getStaticPaths = () =>
  postsIncludingDrafts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }))
---

<BlogPostLayout post={post} />
