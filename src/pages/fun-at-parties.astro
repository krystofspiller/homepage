---
import BaseLayout from "@layouts/BaseLayout.astro"
import { Image } from "astro:assets"
import trollface from "@assets/images/trollface.svg"
import iamsuchanamazingdesigner from "@assets/videos/iamsuchanamazingdesigner.mp4"

// TODO: Merge iamdesigner repo into this one, link to the actual page from here
// TODO: Change troll face image to inverse color and transparent background - SVG
---

<BaseLayout>
  <section class="my-10">
    <h2 class="mb-2 flex gap-2 text-2xl font-semibold">I'm fun at parties</h2>
    <p class="mb-3 text-lg leading-8 text-zinc-400">
      In free time I create troll <Image
        class="inline-flex h-8 w-auto"
        src={trollface}
        alt="Troll face"
      /> websites for my favorite project managers.
    </p>
    <video controls loop autoplay muted>
      <source src={iamsuchanamazingdesigner} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  </section>
</BaseLayout>
