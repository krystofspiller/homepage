{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@mocks/*": ["src/mocks/*"],
      "@public/*": ["/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["vitest/globals"]
  }
}
